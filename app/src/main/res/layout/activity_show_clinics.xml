<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".ShowClinics">

    <TextView
        android:id="@+id/showDoctorTitle"
        style="@style/titleStyle"
        android:layout_height="60dp"
        android:layout_marginTop="230dp"
        android:fontFamily="sans-serif-black"
        android:text="Clinic List" />

    <Button
        android:id="@+id/edit_c_btn"
        android:layout_below="@id/showDoctorTitle"
        style="@style/buttonStyle"
        android:layout_centerHorizontal="true"
        android:text="Edit" />

    <ScrollView
        android:layout_below="@id/edit_c_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/clinic_table"
        android:layout_below="@+id/showDoctorTitle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:layout_marginRight="60dp"
                android:layout_marginLeft="70dp"
                android:padding="5dp"
                android:text="Clinic ID"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_marginRight="3dp"
                android:padding="5dp"
                android:text="Clinic Name"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>
    </ScrollView>

</RelativeLayout>