<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:layout_centerHorizontal="true"
    tools:context=".ShowPatients">

    <TextView
        android:id="@+id/showPatientTitle"
        style="@style/titleStyle"
        android:layout_marginTop="200dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:text="Patients List" />

    <Button
        android:id="@+id/edit_p_btn"
        android:layout_below="@id/showPatientTitle"
        style="@style/buttonStyle"
        android:layout_centerHorizontal="true"
        android:text="Edit" />

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_p_btn"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/patient_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="P_ID"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="First Name"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="Last Name"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="Phone"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="DOB"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="gender"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:text="Address"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        </ScrollView>
    </HorizontalScrollView>
</RelativeLayout>